CREATE TABLE pratica06.Telefone (
  id SERIAL PRIMARY KEY,
  id_cliente INT NOT NULL,
  valor VARCHAR(20) NOT NULL,
  CONSTRAINT fk_cliente_telefone_id FOREIGN KEY (id_cliente) REFERENCES pratica06.Cliente (id)
);

