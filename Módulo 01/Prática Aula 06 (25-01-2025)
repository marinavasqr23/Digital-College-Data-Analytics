(3, 'Paula', 'Oliveira'),
(3, 'Ana', 'Souza');

SELECT * FROM pratica06.vendedor



CREATE TABLE pratica06.Cliente (
  id SERIAL PRIMARY KEY,
  nome VARCHAR(100) NOT NULL,
  sobrenome VARCHAR(100) NOT NULL
);

